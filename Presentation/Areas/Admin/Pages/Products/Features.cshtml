@model List<Application.Dtos.ProductAggregate.ProductFeature.ProductFeatureViewModel>
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویژگی های محصول: @Model.FirstOrDefault().ProductName</h4>
</div>

<form asp-page="./Index" asp-page-handler="Features"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body rowsList">
        <button type="button" class="btn btn-success btn-md" onclick="shit()">افزودن ویژگی</button>
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="@item.DisplayName" class="control-label">نام ویژگی</label>
                        <input type="text" class="form-control"  asp-for="@item.DisplayName">
                        <span asp-validation-for="@item.DisplayName" class="error"></span>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="@item.Value" class="control-label">مقدار</label>
                        <input type="text" class="form-control" asp-for="@item.Value">
                        <span asp-validation-for="@item.Value" class="error"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label  class="control-label">عملیات</label>
                        <button class="btn btn-danger waves-effect waves-light" type="button" onclick="removeLine(this)">حذف</button>
                    </div>
                </div>
            </div>
        }
        @*         <input type="hidden" asp-for="Id" value="@Model.ProductId" />
        *@
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ثبت</button>
    </div>
</form>